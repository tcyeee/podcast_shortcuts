{
    "name": "PodcastShortcuts",
    "version": "1.0.0",
    "description": "Assign a shortcut to Podcasts",
    "manifest_version": 3,
    "author": "NinjaDog",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [],
    "content_scripts": [{
        "matches": ["https://www.thisamericanlife.org/*"],
        "js": ["content.js"]
    }]
}